<!DOCTYPE html>
<html lang="en">
  <head>
    <% include partials/_head %>
  </head>

  <body>
    <div id="wrapper">
      <% if (!userId) { %>
        <h1>Not Logged In</h1>
        <hr>
        <form action="/login" method="GET" class="text-form header-text">
          <input class="button" type="submit" value="Login">
        </form>
        <form action="/register" method="GET" class="text-form header-text">
          <input class="button" type="submit" value="Register">
        </form>
      <% } else { %>

      <% include partials/_header %>
      <hr>
      <h1>New URL</h1>
      <hr>
      <form action="/urls/new" method="POST" class="text-form">
        <label class="text-input" for="longURL">Enter a URL:</label>
        <input class="text-input" id="longURL" type="text" name="longURL" placeholder="www.example.ca">
        <input class="button" type="submit" value="Submit">
      </form>
      <p><a href="/urls">Back to URLs</a></p>
      <% } %>
    </div>
  </body>
</html>