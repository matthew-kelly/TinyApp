<meta charset="utf-8">
<title>TinyApp</title>
<!-- <link rel="stylesheet" type="text/css" href="css/style.css"> -->
<link href="https://fonts.googleapis.com/css?family=Open+Sans: 400,400i,600" rel="stylesheet">
<style>
  /* ----------- HTML ----------- */
  *:focus {
    outline: none;
   }

  body {
    margin: 0;
    background-color: #eee;
    font-family: 'open sans', sans-serif;
  }

  h1 {
    margin: 0;
    padding: 0;
    padding-bottom: 10px;
    font-size: 2em;
    font-weight: bold;
  }

  h2 {
    margin: 0;
    padding: 0;
    font-size: 1.1em;
    font-style: italic;
  }

  a {
    text-decoration: none;
    color: #995000;
  }

  a:hover {
    color: #ff7000;
    transition: 0.1s linear all;
  }

  table {
    border-collapse: collapse;
    text-align: center;
    margin: auto;
    margin-top: 20px;
    margin-bottom: 25px;
  }

  th {
    font-weight: bold;
  }

  th, td {
    border-bottom: 1px solid #ddd;
    vertical-align: middle;
    padding: 10px;
    margin: 0;
  }

  hr {
    border: 0;
    height: 1px;
    background-image: linear-gradient(to right, rgba(0, 0, 0, 0.0), rgba(0, 0, 0, 0.3), rgba(0, 0, 0, 0.4), rgba(0, 0, 0, 0.3), rgba(0, 0, 0, 0));
  }
  /* ----------- .class ----------- */
  .text-form {
    padding: 10px 0;
  }

  .text-input {
    padding: 10px 5px;
    width: 220px;
    font-size: 1em;
  }
  .text-input:focus {
    outline: 2px solid #ff5000;
  }

  .button {
    border: 0.5px solid #d0d0d0;
    width: 70px;
    height: 35px;
    border-radius: 10px;
    transition: 0.1s linear all;
    font-size: 0.9em;
    color: black;
  }

  .button:hover {
    box-shadow: inset 2px 2px rgba(0,0,0,0.2);
    color: #ff5000;
    background-color: #eee;
  }
  /* ----------- #id ----------- */
  #wrapper {
    width: 70%;
    min-width: 500px;
    max-width: 700px;
    margin: auto;
    margin-top: 50px;
    background-color: #f8f8f6;
    padding: 40px 50px 25px;
    border-radius: 50px;
    position: relative;
    text-align: center;
    box-shadow: 2px 4px 6px rgba(0,0,0,0.2);
  }

</style>